                <!--                        android:layout_height="30dp"-->
                <!--                        android:layout_centerHorizontal="true"-->
                <!--                        android:src="@drawable/ic_history_black_24dp" />-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/history"-->
